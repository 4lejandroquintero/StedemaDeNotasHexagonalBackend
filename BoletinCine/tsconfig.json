{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core/*": [
        "src/app/core/*"
      ],
      "@core-service/*": [
        "src/app/core/services/*"
      ],
      "@website/*": [
        "src/app/feature/website/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ]
      ,
      "@cms/*": [
        "src/app/feature/cms/*"
      ],
      "@home/*": [
        "src/app/feature/website/home/*"
      ],
      "@models/*": ["src/app/shared/models/*"],
      "@var/*":["src/assets/*"],
      "@services/*":["src/app/shared/services/*"],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}

